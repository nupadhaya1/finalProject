<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cancelRideRequest">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date: 4/28/2025"
                android:textSize="30sp"
                android:gravity="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/rideIdText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Ride ID:"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_marginBottom="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/statusText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ride Status:"
                android:textColor="@android:color/holo_red_dark"
                android:layout_marginBottom="20dp"
                android:textSize="30sp"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fromText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="From:"
                android:textSize="30sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/toText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="To:"
                android:textSize="30sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/passengersText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Passengers:"
                android:textSize="30sp"
                android:textColor="@color/black" />
        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/updateRideRequest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Update Request"
        android:backgroundTint="@color/black"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/cancelRideRequest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/cancelRideRequest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cancel Request"
        android:backgroundTint="#BA0C2F"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
